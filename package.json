{
  "author": "Lucas K Allmon",
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "description": "Gluons React UI Kit",
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.0",
    "@storybook/addon-info": "^3.2.0",
    "@storybook/addon-knobs": "^3.2.0",
    "@storybook/addon-links": "^3.2.0",
    "@storybook/addon-options": "^3.2.3",
    "@storybook/addon-storyshots": "^3.2.3",
    "@storybook/react": "^3.2.3",
    "@storybook/storybook-deployer": "^2.0.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-css-modules": "^2.7.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "jest-css-modules": "^1.1.0",
    "lerna": "^2.5.1",
    "nwb": "^0.18.10",
    "pre-commit": "^1.2.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "tachyons": "^4.7.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb"
    ],
    "globals": {
      "__DEV__": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "rules": {
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "jsx-a11y/href-no-hash": "off",
      "max-len": [
        1,
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "react/jsx-filename-extension": "off"
    }
  },
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "homepage": "",
  "jest": {
    "collectCoverageFrom": [
      "tests/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules",
      "^react-native$": "react-native-web"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](es|lib|node_modules)[/\\\\]"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "keywords": [
    "react-component"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "name": "@gluons-ui/gluons",
  "peerDependencies": {
    "react": "15.x"
  },
  "pre-commit": [
    "build:add"
  ],
  "repository": "https://github.com/gluons-ui/gluons",
  "scripts": {
    "build": "nwb build-react-component index.js",
    "build:add": "nwb build-react-component && git add es/ lib/",
    "build-storybook": "build-storybook",
    "clean": "nwb clean-module",
    "deploy-storybook": "storybook-to-ghpages",
    "start": "yarn run storybook",
    "storybook": "start-storybook -p 6006",
    "test": "yarn run jest",
    "test:coverage": "yarn run test -- -- --coverage",
    "test:watch": "yarn run test -- -- --watch"
  },
  "version": "0.0.4"
}
